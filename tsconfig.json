{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": false,
    "outDir": "dist",
    "noEmitOnError": true,
    "typeRoots": ["node_modules/@types"],
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "dist/*": ["dist/*"],
      "static/*": ["static/*"],
      "test/*": ["test/*"]
    }
  }
}